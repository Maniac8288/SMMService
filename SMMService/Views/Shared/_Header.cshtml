                    </li>
               
                    <li class="title-section">
                        <i class="icon-star-mini"></i>
                        <span class="title">Избранные</span>
                    </li>
                    <!--ko foreach:LayoutViewModel.Projects-->
                   
                    <li class="project col-md-12">
                        <a  data-bind="attr:{href:'@Url.Action("Settings","Client")/'+Id()}">
                            <div>
                                <img data-bind="attr:{src:ImageUrl}" />
                                <div class="project-info">
                                    <span><i class="icon icon-star-gold"></i></span>
                                    <span class="title" data-bind="text:Name"> </span>
                                </div>
